<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_mollie_plugin.factory.mollie_gateway_factory" class="BitBag\SyliusMolliePlugin\Factory\MollieGatewayFactory">
        </service>
        <service id="bitbag_sylius_mollie_plugin.factory.mollie_subscription_gateway_factory" class="BitBag\SyliusMolliePlugin\Factory\MollieSubscriptionGatewayFactory">
        </service>

        <service id="bitbag_sylius_mollie_plugin.gateway_factory.mollie" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument type="service" id="bitbag_sylius_mollie_plugin.factory.mollie_gateway_factory"/>
            <tag name="payum.gateway_factory_builder" factory="mollie"/>
        </service>
        <service id="bitbag_sylius_mollie_plugin.gateway_factory.mollie_subscription" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument type="service" id="bitbag_sylius_mollie_plugin.factory.mollie_subscription_gateway_factory"/>
            <tag name="payum.gateway_factory_builder" factory="mollie_subscription"/>
        </service>
    </services>
</container>
